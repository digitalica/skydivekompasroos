<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/tablelayout_filterheader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/screen_padding_bottom"
        android:paddingLeft="@dimen/screen_padding_left"
        android:paddingRight="@dimen/screen_padding_right"
        android:paddingTop="@dimen/screen_padding_top" >

        <ImageButton
            android:id="@+id/buttonAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/menu_about"
            android:src="@android:drawable/ic_dialog_info" />

        <TextView
            android:id="@+id/textViewCanopyAdvise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:text="@string/to_be_replaced"
            android:textColor="@android:color/white"
            android:textSize="@dimen/bodyText" />

        <ImageButton
            android:id="@+id/buttonShowCanopyList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:contentDescription="@string/btnShowCanopyList"
            android:src="@android:drawable/ic_media_play" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/SuzanBackGroundBlue"
        android:fillViewport="true"
        android:paddingBottom="@dimen/screen_padding_bottom"
        android:paddingLeft="@dimen/screen_padding_left"
        android:paddingRight="@dimen/screen_padding_right"
        android:paddingTop="@dimen/screen_padding_top" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewIntrotext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/calculationIntrotext"
                android:textSize="@dimen/bodyText" />

            <TextView
                android:id="@+id/textViewWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/to_be_replaced"
                android:textColor="@color/Cat1Red"
                android:textSize="@dimen/bodyText" />

            <TextView
                android:id="@+id/textViewJumpsLast12MonthsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/calculationJumpsLast12MonthsLabel"
                android:textSize="@dimen/bodyText"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/buttonJumpLast12MonthsMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_sb_updown"
                    android:text="@string/btnMin"
                    android:textColor="@color/SuzanBrown"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/seekBarJumpsLast12Months"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/screen_padding_left"
                    android:paddingRight="@dimen/screen_padding_right"
                    android:progressDrawable="@drawable/sb_progress"
                    android:thumb="@drawable/sb_thumb" />

                <Button
                    android:id="@+id/buttonJumpLast12MonthsPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_sb_updown"
                    android:text="@string/btnPlus"
                    android:textColor="@color/SuzanBrown"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewTotalJumpsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/calculationTotalJumpsLabel"
                android:textSize="@dimen/bodyText"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/buttonTotalJumpsMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_sb_updown"
                    android:text="@string/btnMin"
                    android:textColor="@color/SuzanBrown"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/seekBarTotalJumps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/screen_padding_left"
                    android:paddingRight="@dimen/screen_padding_right"
                    android:progressDrawable="@drawable/sb_progress"
                    android:thumb="@drawable/sb_thumb" />

                <Button
                    android:id="@+id/buttonTotalJumpsPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_sb_updown"
                    android:text="@string/btnPlus"
                    android:textColor="@color/SuzanBrown"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewWeightLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/calculationWeightLabel"
                android:textSize="@dimen/bodyText"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/buttonWeightMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_sb_updown"
                    android:text="@string/btnMin"
                    android:textColor="@color/SuzanBrown"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/seekBarWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/screen_padding_left"
                    android:paddingRight="@dimen/screen_padding_right"
                    android:progressDrawable="@drawable/sb_progress"
                    android:thumb="@drawable/sb_thumb" />

                <Button
                    android:id="@+id/buttonWeightPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_sb_updown"
                    android:text="@string/btnPlus"
                    android:textColor="@color/SuzanBrown"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewWingLoadTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wingloadtableheader"
                android:textSize="@dimen/bodyText"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textViewArea1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/screen_padding_left"
                        android:gravity="left"
                        android:paddingLeft="@dimen/screen_padding_left"
                        android:paddingRight="@dimen/screen_padding_right"
                        android:text="@string/to_be_replaced"
                        android:textSize="@dimen/bodyText" />

                    <TextView
                        android:id="@+id/textViewArea2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/screen_padding_left"
                        android:gravity="left"
                        android:paddingLeft="@dimen/screen_padding_left"
                        android:paddingRight="@dimen/screen_padding_right"
                        android:text="@string/to_be_replaced"
                        android:textSize="@dimen/bodyText" />

                    <TextView
                        android:id="@+id/textViewArea3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/screen_padding_left"
                        android:gravity="left"
                        android:paddingLeft="@dimen/screen_padding_left"
                        android:paddingRight="@dimen/screen_padding_right"
                        android:text="@string/to_be_replaced"
                        android:textSize="@dimen/bodyText" />

                    <TextView
                        android:id="@+id/textViewArea4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/screen_padding_left"
                        android:gravity="left"
                        android:paddingLeft="@dimen/screen_padding_left"
                        android:paddingRight="@dimen/screen_padding_right"
                        android:text="@string/to_be_replaced"
                        android:textSize="@dimen/bodyText" />

                    <TextView
                        android:id="@+id/textViewArea5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/screen_padding_left"
                        android:gravity="left"
                        android:paddingLeft="@dimen/screen_padding_left"
                        android:paddingRight="@dimen/screen_padding_right"
                        android:text="@string/to_be_replaced"
                        android:textSize="@dimen/bodyText" />

                    <TextView
                        android:id="@+id/textViewArea6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/screen_padding_left"
                        android:gravity="left"
                        android:paddingLeft="@dimen/screen_padding_left"
                        android:paddingRight="@dimen/screen_padding_right"
                        android:text="@string/to_be_replaced"
                        android:textSize="@dimen/bodyText" />

                    <TextView
                        android:id="@+id/textViewArea7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/screen_padding_left"
                        android:gravity="left"
                        android:paddingLeft="@dimen/screen_padding_left"
                        android:paddingRight="@dimen/screen_padding_right"
                        android:text="@string/to_be_replaced"
                        android:textSize="@dimen/bodyText" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textViewWingLoad1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/screen_padding_left"
                        android:gravity="left"
                        android:paddingLeft="@dimen/screen_padding_left"
                        android:paddingRight="@dimen/screen_padding_right"
                        android:text="@string/to_be_replaced"
                        android:textSize="@dimen/bodyText"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewWingLoad2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/screen_padding_left"
                        android:gravity="left"
                        android:paddingLeft="@dimen/screen_padding_left"
                        android:paddingRight="@dimen/screen_padding_right"
                        android:text="@string/to_be_replaced"
                        android:textSize="@dimen/bodyText"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewWingLoad3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/screen_padding_left"
                        android:gravity="left"
                        android:paddingLeft="@dimen/screen_padding_left"
                        android:paddingRight="@dimen/screen_padding_right"
                        android:text="@string/to_be_replaced"
                        android:textSize="@dimen/bodyText"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewWingLoad4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/screen_padding_left"
                        android:gravity="left"
                        android:paddingLeft="@dimen/screen_padding_left"
                        android:paddingRight="@dimen/screen_padding_right"
                        android:text="@string/to_be_replaced"
                        android:textSize="@dimen/bodyText"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewWingLoad5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/screen_padding_left"
                        android:gravity="left"
                        android:paddingLeft="@dimen/screen_padding_left"
                        android:paddingRight="@dimen/screen_padding_right"
                        android:text="@string/to_be_replaced"
                        android:textSize="@dimen/bodyText"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewWingLoad6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/screen_padding_left"
                        android:gravity="left"
                        android:paddingLeft="@dimen/screen_padding_left"
                        android:paddingRight="@dimen/screen_padding_right"
                        android:text="@string/to_be_replaced"
                        android:textSize="@dimen/bodyText"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewWingLoad7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/screen_padding_left"
                        android:gravity="left"
                        android:paddingLeft="@dimen/screen_padding_left"
                        android:paddingRight="@dimen/screen_padding_right"
                        android:text="@string/to_be_replaced"
                        android:textSize="@dimen/bodyText"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/textViewJumperCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/to_be_replaced"
                android:textSize="@dimen/bodyText" />

            <TextView
                android:id="@+id/textViewJumperCategoryDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/to_be_replaced"
                android:textSize="@dimen/smallText" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="1" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textViewCanopyCategoryLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/table_padding_aftercolon"
                        android:text="@string/calculationCanopyCategoryLabel"
                        android:textSize="@dimen/smallText" />

                    <TextView
                        android:id="@+id/textViewCanopyCategoryText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/to_be_replaced"
                        android:textSize="@dimen/smallText" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textViewCanopyMinAreaLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/table_padding_aftercolon"
                        android:text="@string/calculationCanopyMinAreaLabel"
                        android:textSize="@dimen/smallText" />

                    <TextView
                        android:id="@+id/textViewCanopyMinAreaText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/to_be_replaced"
                        android:textSize="@dimen/smallText" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textViewCanopyMaxWingLoadLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/table_padding_aftercolon"
                        android:text="@string/calculationMaxWingLoadLabel"
                        android:textSize="@dimen/smallText" />

                    <TextView
                        android:id="@+id/textViewCanopyMaxWingLoadText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/to_be_replaced"
                        android:textSize="@dimen/smallText" />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/textViewSpecificCanopiesTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/specificcanopiestableheader"
                android:textSize="@dimen/bodyText"
                android:textStyle="bold" />

            <TableLayout
                android:id="@+id/tableSpecificCanopies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shrinkColumns="1" >
            </TableLayout>

            <Button
                android:id="@+id/buttonAddSpecificCanopy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_sb_updown"
                android:text="@string/btnPlus"
                android:textColor="@color/SuzanBrown"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>